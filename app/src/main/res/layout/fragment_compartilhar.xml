<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.CompartilharFragment">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Compartilhe suas tarefas"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:layout_margin="16dp"/>

        <Button
            android:id="@+id/btn_todas_tarefas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:layout_margin="16dp"
            android:text="Todas tarefas" />


        <Button
            android:id="@+id/btn_feitas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:layout_margin="16dp"
            android:text="Tarefas Feitas" />


        <Button
            android:id="@+id/btn_nao_feitas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:layout_margin="16dp"
            android:text="Tarefas nÃ£o feitas" />


    </LinearLayout>

</FrameLayout>